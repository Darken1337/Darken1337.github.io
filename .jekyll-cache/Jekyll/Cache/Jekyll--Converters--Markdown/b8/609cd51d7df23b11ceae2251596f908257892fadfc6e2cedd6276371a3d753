<h1 id="сколько-стоит"><strong>Сколько стоит</strong></h1>

<div class="row">
    <div class="col">
      
      <p>Полная цена $225</p>
      
      
      <script>
$(document).ready(function() {
  $.ajaxSetup({ cache: false });

  function price() {
    let  
      amount = "225",
      productName = "Консультация маркетолога под ключ",
      productId = "marketer-turnkey";
    $.getJSON('https://bot.icoach.io/wayforpay-sign.php?amount=' + amount + '&currency=USD&productName=' + productName + '&productId=' + productId, function (data) {
      $.each(data, function (key, val) {
        $('.paybutton-marketer-turnkey').append('<input type="hidden" value="' + val + '"' + 'name="' + key + '">');
      });
    });
  }
  price();

  if ($('.paybutton-marketer-turnkey').length > 1) {
    alert('Duplicate product ID: marketer-turnkey');
  }
})
</script>
<form method="POST" action="https://secure.wayforpay.com/pay" class="paybutton-marketer-turnkey" style="display:flex;flex-direction:column;">
  
  <input class="btn card-link btn-primary" type="submit" value="Купить за $225" />
</form>
    </div>
    <div class="col">
      <p>Для партнёров iCoach $150</p>
      
      
      <script>
